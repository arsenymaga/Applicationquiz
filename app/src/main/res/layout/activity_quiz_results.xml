<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/backgroundquiz"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/finalText"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Ваш результат:"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_below="@id/finalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/correctAnswers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Правильных ответов:0"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/green"/>
        <TextView
            android:id="@+id/inCorrectAnswers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Неправильных ответов:0"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#DD2C00"/>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startNewQuizBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:background="@drawable/round_back_green20"
        android:text="Начать новую викторину" />

</RelativeLayout>